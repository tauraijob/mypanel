# Application
APP_URL=https://yourdomain.com    # Required for email links in production
APP_NAME=MyPanel

# Database
DATABASE_URL="mysql://user:password@localhost:3306/mypanel"

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# SMTP Email (can also be configured in Settings UI)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="MyPanel <noreply@yourdomain.com>"

# Security
PUBLIC_TOKEN_SECRET=your-random-secret-for-public-links
